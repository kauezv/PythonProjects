v = float(input('Digite a velocidade do carro: '))

if v > 80:
    print(f'\nVocê foi MULTADO! '
          f'\nVelocidade de {v}KM/h está acima da máxima permitida (80.0KM/h)'
          '\nO valor da multa é de R$ 7.00 para cada KM acima da máxima permitida')
    n1 = (v - 80) * 7
    print(f'=== TOTAL DA MULTA: R$ {n1:.2f} ===')
else:
    print(f'\nTudo certo! '
          f'\nVelocidade de {v}KM/h está dentro da máxima permitida (80.0KM/h)')
print('Dirija com segurança!')
